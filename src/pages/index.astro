---

import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Proposito from '../components/Proposito.astro';
import Paquetes from '../components/Paquetes.astro';
import Yanina from '../components/Yanina.astro';
---

<Layout>
	<Hero />
	<Proposito />
	<Paquetes />
	<Yanina />
</Layout>

<style is:global>
	
	@font-face {
		font-family: 'TightSB';
		src: url('/public/fuentes/InterTight-SemiBold.ttf') format('truetype');
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'TightTI';
		src: url('/public/fuentes/InterTight-ThinItalic.ttf') format('truetype');
		font-weight: 600;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'TightEB';
		src: url('/public/fuentes/InterTight-ExtraBold.ttf') format('truetype');
		font-weight: 800;
		font-style: normal;
		font-display: swap;
}
	@font-face {
		font-family: 'TightR';
		src: url('/public/fuentes/InterTight-Regular.ttf') format('truetype');
		font-weight: 400;
		font-style: normal;
		font-display: swap;
}
	@font-face {
		font-family: 'TightBlack';
		src: url('/public/fuentes/InterTight-Black.ttf') format('truetype');
		font-weight: 900;
		font-style: normal;
		font-display: swap;
}

</style>