        flex-direction: column;
        
        align-items: center;
        color: white;
    }
    .platoTitle span{
        margin: 0px;
        margin-bottom: 30px;
        font-family: 'TightEB', sans-serif;
        font-size: 1.5rem;
    }
    .platoTitle h2{
        width: 55%;
        margin: 0px;
        font-family: 'TightEB', sans-serif;
        font-size: 5rem;
        text-align: center;
    }
    .platoDescripcion{
        
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .platoDescripcion h3{
        margin-top: 50px;
        margin-bottom: 70px;
        color: rgb(255, 255, 255);
        font-family: 'TightR', sans-serif;
    }
    .cuadroDescripcion{
        color: white;
        width: 50%;
        border: 1px solid white;
        border-top-left-radius: 35px;
        border-top-right-radius: 35px;
        
    }
    .cuadroDescripcion h4{
        margin: 0px;
        padding: 20px;
        border-bottom: 1px solid white;
        font-family: 'TightEB', sans-serif;
    }
    .descripcion{
        width: 50%;  /* Ancho total del contenedor */
        height: 400px;  /* Altura fija */
        overflow: hidden;  /* El contenido que exceda el height no se muestra */
        border: 1px solid #ccc;
        border-top: none;
        color: white;
        background-color: rgb(6, 47, 47);
        border-bottom-left-radius: 35px;
        border-bottom-right-radius: 35px;
        
    }
    .descripcion p{
        
        margin: 0px;
        width: 50%;
    }

</style>