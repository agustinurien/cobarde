<style>
    section{
        
    }
    .platoImgContainer{
        position: relative;
        width: 100%;
        height: 80vh;
    }
    .platoImgContainer img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .platoTitle{
        background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 80%, #161616);
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        
